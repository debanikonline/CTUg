<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="debanikandroidstudio.ctug.MainActivity"
    android:background="#D6D6D6">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        android:ems="10"
        android:hint="Fingerprint ID"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:id="@+id/editTextname"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        android:ems="10"
        android:hint="Access Code"
        android:gravity="center"
        android:layout_below="@+id/editTextname"
        android:layout_alignEnd="@+id/editTextname"
        android:layout_marginTop="47dp"
        android:id="@+id/editTextpassword" />

    <Button
        android:text="LOGIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextpassword"
        android:layout_marginTop="46dp"
        android:id="@+id/buttonlogin"


        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/AdminForgotPasswordButtonID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonlogin"
        android:layout_alignStart="@+id/buttonlogin"
        android:layout_below="@+id/buttonlogin"
        android:layout_marginTop="34dp"
        android:text="Forgot Password"
        android:textColor="#000000"
        android:background="#ffffff"/>

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        app:srcCompat="@drawable/adminlogo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
