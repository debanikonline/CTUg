<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animationlist"
    android:id="@+id/fp2"
    tools:context="debanikandroidstudio.ctug.FP_Enterusername">

    <Button
        android:id="@+id/fp_1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"


        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="176dp" />

    <EditText
        android:id="@+id/fp_1_username"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:padding="27px"
        android:background="@drawable/fullborder"
        android:inputType="textPersonName"
        android:textColorHint="#FFFFFF"
        android:hint="Enter your Username"
        android:layout_above="@+id/fp_1_button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        android:paddingLeft="50px"
        android:layout_height="160dp"
        android:textSize="57dp"
        android:gravity="center_vertical"
        android:text="Here to help!!"
        android:layout_above="@+id/fp_1_username"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="49dp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Help me by entering your username..."
        android:layout_above="@+id/fp_1_username"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="9dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/greentick"

        android:layout_below="@+id/textView23"
        android:layout_alignEnd="@+id/fp_1_username"
        android:layout_marginTop="60dp" />

    <Button
        android:id="@+id/signup_from_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/fp_1_button"
        android:layout_below="@+id/fp_1_username"
        android:layout_marginTop="57dp"
        android:text="Signup" />
</RelativeLayout>
