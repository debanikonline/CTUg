<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/feedback_name"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/feedback_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/feedback_name"
        android:layout_below="@+id/feedback_name"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Email"
        android:layout_alignEnd="@+id/feedback_name" />

    <EditText
        android:id="@+id/feedback_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/feedback_email"
        android:layout_below="@+id/feedback_email"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="Phone Number"
        android:layout_alignEnd="@+id/feedback_email" />

    <EditText
        android:id="@+id/feedback_feedback"
        android:layout_width="wrap_content"
        android:layout_height="170sp"
        android:layout_alignStart="@+id/feedback_phone"
        android:layout_below="@+id/feedback_phone"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Feedback"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:layout_alignEnd="@+id/feedback_phone" />

    <Button
        android:id="@+id/feedback_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback_feedback"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"

        android:text="Button" />
</RelativeLayout>
