<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6D6D6"
    tools:context="debanikandroidstudio.ctug.Insert_StopageDetail">

    <Spinner
        android:id="@+id/select_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:layout_below="@+id/selectstopage_text"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/stopagenameID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Stopage Name"
        android:layout_below="@+id/select_spinner"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/stopagetimeID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Stopage Time"
        android:layout_below="@+id/stopagenameID"
        android:layout_alignStart="@+id/stopagenameID"
        android:layout_marginTop="17dp" />

    <Button
        android:id="@+id/enterstopagebuttonID"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="Insert Details"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/stopagetimeID"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/trytext"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/selectstopage_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:textSize="27sp"
        android:gravity="center"
        android:text="Please select a Route from below"
        android:layout_below="@+id/trytext"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/adminlogo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp" />
</RelativeLayout>
