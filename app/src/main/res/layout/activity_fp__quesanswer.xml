<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animationlist"
    android:id="@+id/fpques"
    tools:context="debanikandroidstudio.ctug.FP_Quesanswer">

    <TextView
        android:id="@+id/fp_2_question"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/textView22"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/fp_2_answer"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:gravity="center"
        android:background="@drawable/fullborder"
        android:textColor="#ffffff"
        android:inputType="textPersonName"
        android:hint="Answer Here"
        android:layout_below="@+id/fp_2_question"
        android:layout_alignStart="@+id/fp_2_question" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Just to be sure its really you, Answer this please..."
        android:layout_below="@+id/textView23"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        android:paddingLeft="50px"
        android:layout_height="160dp"
        android:textSize="60dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="ahh... how could you??" />
    <Button
        android:id="@+id/fp_2_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:background="@drawable/fullborder"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="74dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/fp_2_answer"
        android:layout_alignEnd="@+id/fp_2_answer" />

</RelativeLayout>
