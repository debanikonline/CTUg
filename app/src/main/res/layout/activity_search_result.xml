<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6D6D6"

    tools:context="debanikandroidstudio.ctug.Search_Result_Activity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="360sp"
        android:orientation="horizontal"

        android:id="@+id/searchbuslist_in_new_linear"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true">


        <ListView
            android:id="@+id/search_busnumber_list_ID"
            android:layout_width="200sp"

            android:layout_height="match_parent"
            android:divider="#000000"

            android:dividerHeight="1sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="150sp"
        android:layout_height="30sp"
        android:text="Back"
        android:background="#e45664"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Select a busnumber to know route details"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/searchbuslist_in_new_linear" />
</RelativeLayout>
