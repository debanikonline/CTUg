<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8FEFF"
    tools:context="debanikandroidstudio.ctug.LoginSwitcher">

    <Spinner
        android:id="@+id/Login_Switcher_SpinnerID"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:text="[Login as:-]"
        />

    <Button
        android:id="@+id/loginswitcherbuttonID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Login_Switcher_SpinnerID"
        android:layout_marginTop="58dp"
        android:text="Proceed"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#E8FEFF"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="11dp"
        android:text="login_switcher" />
</RelativeLayout>
